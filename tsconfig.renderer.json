{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "declaration": false,
    "outDir": "./dist/renderer",
    "isolatedModules": true,
    "noEmit": false,
    "types": ["node"]
  },
  "include": [
    "src/renderer/**/*",
    "src/shared/**/*"
  ],
  "exclude": ["node_modules", "dist", "src/main/**/*", "src/preload/**/*"]
}
